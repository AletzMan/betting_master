model User {
    id            String   @id @default(uuid())
    name          String
    uid           String   @unique
    email         String   @unique
    image         String?
    color         String?
    account       String?
    total_bets    Int      @default(0)
    bets_won      Int      @default(0)
    finals_won    Int      @default(0)
    last_login    DateTime @default(now())
    notifications Boolean  @default(false)

    Bet Bet?
}
