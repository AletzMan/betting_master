model Bet {
    id            String       @id @default(uuid())
    uid           String
    day           Int // Ahora es un Int y se relaciona con MatchDay
    name          String
    predictionIds String[]     @unique // Array de IDs de Prediction
    season        String
    paid          Boolean
    tournament    String
    userInfo      User?        @relation(fields: [uid], references: [id], onDelete: Cascade)
    MatchDay      MatchDay?    @relation(fields: [day], references: [id])
    Prediction    Prediction[]

    @@map("bets")
}
