model Bet {
    id          String       @id @default(uuid())
    uid         String
    day         Int
    name        String
    season      String
    paid        Boolean
    tournament  String
    userInfo    User?        @relation(fields: [uid], references: [id], onDelete: Cascade)
    MatchDay    MatchDay?    @relation(fields: [day], references: [day])
    predictions Prediction[] // Relaci√≥n con Predictions

    @@map("bets")
}
